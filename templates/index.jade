!!! strict
html(xmlns='http://www.w3.org/1999/xhtml')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title Tornado Chat Demo
    link(rel='stylesheet', href='{{ static_url(', chat.css='chat.css', type='text/css')
    link(rel='stylesheet', href='{{ static_url(', bootstrap.min.css='bootstrap.min.css', type='text/css')
  body
    #body
      .container
      #input
        form#messageform(action='/a/message/new', method='post')
          table
            tr
              td
                input#message(name='body', style='width: 500px;')
              td(style='padding-left: 5px;')
                input(type='submit', value='{{ _(', post='Post')
                input(type='hidden', name='next', value='{{ request.path }}')
                | {% module xsrf_form_html() %}
      #inbox
        | {% for message in messages %}
        | {% include "message.html" %}
        | {% end %}
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js', type='text/javascript')
    script(src='{{ static_url(', chat.js='chat.js', type='text/javascript')
